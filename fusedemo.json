    "host": "0.0.0.0",
    "basePath": "/demos",
    "schemes": [
        "http"
    ],
    "paths": {
        "/sourcegateway/balance/{acctid}": {
            "get": {
                "tags": [
                    "sourcegateway"
                ],
                "description": "Retrieve account balance",
                "parameters": [
                    {
                        "name": "acctid",
                        "in": "path",
                        "description": "Account id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "API_KEY",
                        "in": "formData",
                        "description": "The API keys for 3scale",
                        "type": "string"
                    },
                    {
                        "name": "moneysource",
                        "in": "query",
                        "description": "The source of money where the account is",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The account balance",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Account not found"
                    },
                    "503": {
                        "description": "Service Unavailable"
                    }
                },
                "x-camelContextId": "camelContext-a73e7fe1-456e-4e15-9926-fae906325f11",
                "x-routeId": "route1"
            }
        },
        "/sourcegateway/profile/{acctid}": {
            "get": {
                "tags": [
                    "sourcegateway"
                ],
                "description": "Retrieve account profile information",
                "parameters": [
                    {
                        "name": "acctid",
                        "in": "path",
                        "description": "Account ID",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "moneysource",
                        "in": "query",
                        "description": "The source of money where the account is",
                        "type": "string"
                    },
                    {
                        "name": "API_KEY",
                        "in": "formData",
                        "description": "3scale key"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Account profile retrieved ",
                        "schema": {
                            "$ref": "#/definitions/Profile"
                        }
                    },
                    "404": {
                        "description": "Account not found"
                    },
                    "503": {
                        "description": "Service Unavailable"
                    }
                },
                "x-camelContextId": "camelContext-a73e7fe1-456e-4e15-9926-fae906325f11",
                "x-routeId": "route2"
            }
        },
        "/sourcegateway/transfer": {
            "post": {
                "tags": [
                    "sourcegateway"
                ],
                "description": "Transfer money between sender and receiver account",
                "parameters": [
                    {
                        "name": "acctid",
                        "in": "formData",
                        "description": "Account ID",
                        "type": "string"
                    },
                    {
                        "name": "recepid",
                        "in": "formData",
                        "description": "Receiving ID",
                        "type": "string"
                    },
                    {
                        "name": "amt",
                        "in": "formData",
                        "description": "Amount of money to transfer",
                        "type": "string"
                    },
                    {
                        "name": "moneysource",
                        "in": "query",
                        "description": "The source of money where the account is"
                    }
                ],
                "x-camelContextId": "camelContext-a73e7fe1-456e-4e15-9926-fae906325f11",
                "x-routeId": "route3"
            }
        },
        "/sourcegateway/transferwithjson": {
            "post": {
                "tags": [
                    "sourcegateway"
                ],
                "description": "Transfer money between sender and receiver account with JSON input",
                "x-camelContextId": "camelContext-a73e7fe1-456e-4e15-9926-fae906325f11",
                "x-routeId": "route4"
            }
        }
    },
    "tags": [
        {
            "name": "sourcegateway"
        }
    ],
    "definitions": {
        "Profile": {
            "title": "Root Type",
            "description": "The root of the Profile type's schema.",
            "type": "object",
            "properties": {
                "id": {
                    "format": "int32",
                    "type": "integer"
                },
                "acctname": {
                    "type": "string"
                },
                "balance": {
                    "format": "int32",
                    "type": "integer"
                },
                "ssn": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                },
                "addr": {
                    "type": "string"
                },
                "state": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "3scale API Secured Key": {
            "type": "apiKey",
            "name": "API_KEY",
            "in": "header",
            "scopes": {}
        }
    }
}